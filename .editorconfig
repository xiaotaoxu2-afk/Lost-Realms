root = true

# =========================
# General
# =========================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# =========================
# C# files
# =========================
[*.cs]
indent_style = space
indent_size = 4

# 建议：一个文件一个命名空间（Unity常见）
dotnet_style_namespace_match_folder = true:suggestion

# using 规则：System 优先，且分组
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

# this. 限制：字段/属性等不强制（Unity社区普遍不强制）
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion
dotnet_style_qualification_for_method = false:suggestion
dotnet_style_qualification_for_event = false:suggestion

# var 使用：仅在明显类型时允许（可改成 true 更激进）
csharp_style_var_for_built_in_types = false:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = false:suggestion

# 表达式体成员：Unity里可读性优先，给 suggestion（不强制）
csharp_style_expression_bodied_methods = when_on_single_line:suggestion
csharp_style_expression_bodied_properties = when_on_single_line:suggestion
csharp_style_expression_bodied_accessors = when_on_single_line:suggestion

# 花括号：强制使用（Unity团队最常见）
csharp_prefer_braces = true:warning

# 括号换行与大括号
csharp_new_line_before_open_brace = all
csharp_new_line_before_catch = true
csharp_new_line_before_else = true
csharp_new_line_before_finally = true

# 让参数、初始化器更整齐（不喜欢可删）
csharp_wrap_parameters_style = chop_if_long
csharp_wrap_before_binary_operators = before
csharp_wrap_after_declaration_lpar = false
csharp_wrap_after_invocation_lpar = false

# 空格规则（偏常见/温和）
csharp_space_after_keywords_in_control_flow_statements = true
csharp_space_after_comma = true
csharp_space_before_comma = false
csharp_space_around_binary_operators = before_and_after
csharp_space_between_method_declaration_parameter_list_parentheses = false
csharp_space_between_method_call_parameter_list_parentheses = false

# 文件顶部：可按团队决定
# 如果你们不想强制文件头注释，就保持空；如果要统一文件头，Rider更适合用模板而不是这里强推

# =========================
# Unity 特别常见：YAML / Shader / CGINC
# =========================
[*.{shader,compute,cginc,hlsl,glsl}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
